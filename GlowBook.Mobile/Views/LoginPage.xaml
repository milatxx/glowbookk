<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="GlowBook.Mobile.Views.LoginPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    BackgroundColor="{StaticResource GbBabyPink}">

    <Grid Padding="24">
        <Border Style="{StaticResource GbCard}">
            <VerticalStackLayout Spacing="12">
                <Label Text="GlowBook"
                       Style="{StaticResource GbCardTitle}" />

                <Entry Placeholder="Email" Text="{Binding Email}" Keyboard="Email" />
                <Entry Placeholder="Wachtwoord" Text="{Binding Password}" IsPassword="True" />

                <Label Text="{Binding Error}" TextColor="Red" />

                <Button Text="Login"
                        Style="{StaticResource GbPrimaryButton}"
                        Command="{Binding LoginCommand}" />

                <ActivityIndicator IsRunning="{Binding IsBusy}"
                                   IsVisible="{Binding IsBusy}" />
            </VerticalStackLayout>
        </Border>
    </Grid>
</ContentPage>
