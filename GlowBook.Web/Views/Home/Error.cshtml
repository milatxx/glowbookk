@using Microsoft.Extensions.Localization
@inject IStringLocalizer<GlowBook.Web.SharedResources> SR

@{
    ViewData["Title"] = SR["Error_Title"];
}

<div class="container mt-4">
    <div class="gb-card">
        <h2 class="gb-card-title">@SR["Error_Title"]</h2>
        <p class="text-muted">
            @SR["Error_Message"]
        </p>

        <a asp-controller="Home" asp-action="Index" class="btn-gb mt-2">
            @SR["Error_BackToHome"]
        </a>
    </div>
</div>
