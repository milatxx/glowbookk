@using GlowBook.Web.Models      
@model PagedResult<GlowBook.Model.Entities.Appointment>

<div class="gb-table-wrapper">
    <table class="table table-striped table-hover align-middle mb-2 gb-table">
        <thead>
            <tr>
                <th>Datum</th>
                <th>Klant</th>
                <th>Medewerker</th>
                <th>Status</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var a in Model.Items)
            {
                <tr>
                    <td>@a.Start.ToString("dd/MM HH:mm")</td>
                    <td>@a.Customer.Name</td>
                    <td>@a.Staff.Name</td>
                    <td>@a.Status</td>
                    <td class="text-end">
                        @if (User.HasClaim("permission", "manage_appointments"))
                        {
                            <a asp-action="Edit" asp-route-id="@a.Id" class="btn btn-sm btn-outline-secondary me-1">Bewerken</a>
                            <a asp-action="Delete" asp-route-id="@a.Id" class="btn btn-sm btn-outline-danger">Verwijderen</a>
                        }
                        <a asp-action="Details" asp-route-id="@a.Id" class="btn btn-sm btn-outline-primary ms-1">Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <nav>
        <ul class="pagination justify-content-end mb-0">
            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(i == Model.Page ? "active" : "")">
                    <a class="page-link" href="javascript:void(0)" onclick="goToPage(@i)">@i</a>
                </li>
            }
        </ul>
    </nav>
</div>
