@model GlowBook.Model.Helpers.PagedResult<GlowBook.Model.Entities.Appointment>

@{
    ViewData["Title"] = "Kalender";

    // Filter ophalen uit de ViewBag
    var filter = (GlowBook.Web.Models.AppointmentFilterViewModel)ViewBag.Filter!;

}

<div class="container mt-4">
    <div class="gb-card">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <div>
                <h2 class="gb-card-title">Kalender</h2>
                <p class="mb-0 text-muted">Overzicht van alle geplande afspraken.</p>
            </div>

            <a asp-action="Create" class="btn-gb">
                Nieuwe afspraak
            </a>
        </div>

        <!-- FILTER FORM -->
        <form method="get" class="row g-3 mb-4" id="filterForm">
            <div class="col-lg-2 col-md-4">
                <label asp-for="@filter.From" class="form-label"></label>
                <input asp-for="@filter.From" name="From" class="form-control" value="@filter.From?.ToString("yyyy-MM-dd")" type="date" />
            </div>

            <div class="col-lg-2 col-md-4">
                <label asp-for="@filter.To" class="form-label"></label>
                <input asp-for="@filter.To" name="To" class="form-control" value="@filter.To?.ToString("yyyy-MM-dd")" type="date" />
            </div>

            <div class="col-lg-2 col-md-4">
                <label asp-for="@filter.CustomerId" class="form-label"></label>
                <select name="CustomerId" class="form-select" asp-items="filter.Customers">
                    <option value="">-- Alle klanten --</option>
                </select>
            </div>

            <div class="col-lg-2 col-md-4">
                <label asp-for="@filter.StaffId" class="form-label"></label>
                <select name="StaffId" class="form-select" asp-items="filter.Staff">
                    <option value="">-- Alle medewerkers --</option>
                </select>
            </div>

            <div class="col-lg-2 col-md-4">
                <label asp-for="@filter.Status" class="form-label"></label>
                <select name="Status" class="form-select" asp-items="filter.Statuses">
                    <option value="">-- Alle statussen --</option>
                </select>
            </div>

            <div class="col-lg-2 col-md-4 d-flex align-items-end justify-content-end">
                <button type="submit" class="btn-gb me-2">Filter</button>
                <a asp-action="Index" class="btn btn-outline-secondary">Reset</a>
            </div>
        </form>

        <!-- TABEL -->
        @if (!Model.Items.Any())
        {
            <div class="alert alert-info mb-0">
                Er zijn geen afspraken voor de huidige filter.
            </div>
        }
        else
        {
            <div class="gb-table-wrapper">
                <div class="table-responsive gb-table">
                    <table class="table table-hover align-middle mb-0">
                        <thead>
                            <tr>
                                <th>Datum</th>
                                <th>Start</th>
                                <th>Einde</th>
                                <th>Klant</th>
                                <th>Medewerker</th>
                                <th>Dienst</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Items)
                            {
                                var serviceName = item.AppointmentServices.FirstOrDefault()?.Service?.Name ?? "";
                                <tr>
                                    <td>@item.Start.ToString("dd/MM/yyyy")</td>
                                    <td>@item.Start.ToString("HH:mm")</td>
                                    <td>@item.End.ToString("HH:mm")</td>
                                    <td>@item.Customer?.Name</td>
                                    <td>@item.Staff?.Name</td>
                                    <td>@serviceName</td>
                                    <td>@item.Status</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        }

        <!-- PAGINERING -->
        <nav aria-label="Page navigation" class="mt-3">
            <ul class="pagination justify-content-center">
                @if (Model.PageNumber > 1)
                {
                    <li class="page-item">
                        <a class="page-link" href="?page=@(Model.PageNumber - 1)">← Vorige</a>
                    </li>
                }

                @for (int i = 1; i <= Model.TotalPages; i++)
                {
                    <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                        <a class="page-link" href="?page=@i">@i</a>
                    </li>
                }

                @if (Model.PageNumber < Model.TotalPages)
                {
                    <li class="page-item">
                        <a class="page-link" href="?page=@(Model.PageNumber + 1)">Volgende →</a>
                    </li>
                }
            </ul>
        </nav>
    </div>
</div>
