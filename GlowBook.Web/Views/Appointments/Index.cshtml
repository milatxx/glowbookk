@using GlowBook.Model.Entities
@model IEnumerable<Appointment>

@{
    ViewData["Title"] = "Kalender";
}

<div class="container mt-4">
    <div class="gb-card">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <div>
                <h2 class="gb-card-title">Kalender</h2>
                <p class="mb-0 text-muted">Overzicht van alle geplande afspraken.</p>
            </div>

            <a asp-action="Create" class="btn-gb">
                Nieuwe afspraak
            </a>
        </div>

        @if (!Model.Any())
        {
            <div class="alert alert-info mb-0">
                Er zijn nog geen afspraken.
            </div>
        }
        else
        {
            <div class="gb-table-wrapper">
                <div class="table-responsive gb-table">
                    <table class="table table-hover align-middle mb-0">
                        <thead>
                            <tr>
                                <th>Datum</th>
                                <th>Start</th>
                                <th>Einde</th>
                                <th>Klant</th>
                                <th>Medewerker</th>
                                <th>Dienst</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                var serviceName = item.AppointmentServices.FirstOrDefault()?.Service?.Name ?? "";
                                <tr>
                                    <td>@item.Start.ToString("dd/MM/yyyy")</td>
                                    <td>@item.Start.ToString("HH:mm")</td>
                                    <td>@item.End.ToString("HH:mm")</td>
                                    <td>@item.Customer?.Name</td>
                                    <td>@item.Staff?.Name</td>
                                    <td>@serviceName</td>
                                    <td>@item.Status</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        }
    </div>
</div>
