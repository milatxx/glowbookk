@model GlowBook.Web.Models.AppointmentFilterViewModel

@{
    ViewData["Title"] = "Kalender";
}

<div class="container mt-4">
    <div class="gb-card">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <div>
                <h2 class="gb-card-title">Kalender</h2>
                <p class="mb-0 text-muted">Overzicht van alle geplande afspraken.</p>
            </div>

            <a asp-action="Create" class="btn-gb">
                Nieuwe afspraak
            </a>
        </div>

        <form method="get" class="row g-3 mb-4">
            <div class="col-lg-2 col-md-4">
                <label asp-for="From" class="form-label"></label>
                <input asp-for="From" class="form-control" />
            </div>

            <div class="col-lg-2 col-md-4">
                <label asp-for="To" class="form-label"></label>
                <input asp-for="To" class="form-control" />
            </div>

            <div class="col-lg-2 col-md-4">
                <label asp-for="CustomerId" class="form-label"></label>
                <select asp-for="CustomerId" asp-items="Model.Customers" class="form-select">
                    <option value="">-- Alle klanten --</option>
                </select>
            </div>

            <div class="col-lg-2 col-md-4">
                <label asp-for="StaffId" class="form-label"></label>
                <select asp-for="StaffId" asp-items="Model.Staff" class="form-select">
                    <option value="">-- Alle medewerkers --</option>
                </select>
            </div>

            <div class="col-lg-2 col-md-4">
                <label asp-for="Status" class="form-label"></label>
                <select asp-for="Status" asp-items="Model.Statuses" class="form-select">
                    <option value="">-- Alle statussen --</option>
                </select>
            </div>

            <div class="col-lg-2 col-md-4 d-flex align-items-end justify-content-end">
                <button type="submit" class="btn-gb me-2">Filter</button>
                <a asp-action="Index" class="btn btn-outline-secondary">Reset</a>
            </div>
        </form>

        @if (!Model.Items.Any())
        {
            <div class="alert alert-info mb-0">
                Er zijn geen afspraken voor de huidige filter.
            </div>
        }
        else
        {
            <div class="gb-table-wrapper">
                <div class="table-responsive gb-table">
                    <table class="table table-hover align-middle mb-0">
                        <thead>
                            <tr>
                                <th>Datum</th>
                                <th>Start</th>
                                <th>Einde</th>
                                <th>Klant</th>
                                <th>Medewerker</th>
                                <th>Dienst</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Items)
                            {
                                var serviceName = item.AppointmentServices.FirstOrDefault()?.Service?.Name ?? "";
                                <tr>
                                    <td>@item.Start.ToString("dd/MM/yyyy")</td>
                                    <td>@item.Start.ToString("HH:mm")</td>
                                    <td>@item.End.ToString("HH:mm")</td>
                                    <td>@item.Customer?.Name</td>
                                    <td>@item.Staff?.Name</td>
                                    <td>@serviceName</td>
                                    <td>@item.Status</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        }
    </div>
</div>
