@model GlowBook.Model.Entities.Appointment

@{
    ViewData["Title"] = "Afspraak bewerken";
}

<div class="gb-card mt-3">
    <div class="gb-card-title">Afspraak bewerken</div>

    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="Id" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="mb-3">
            <label asp-for="CustomerId" class="form-label"></label>
            <select asp-for="CustomerId"
                    asp-items="@(new SelectList((IEnumerable<GlowBook.Model.Entities.Customer>)ViewBag.Customers, "Id", "Name"))"
                    class="form-select">
            </select>
            <span asp-validation-for="CustomerId" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="StaffId" class="form-label"></label>
            <select asp-for="StaffId"
                    asp-items="@(new SelectList((IEnumerable<GlowBook.Model.Entities.Staff>)ViewBag.Staff, "Id", "Name"))"
                    class="form-select">
            </select>
            <span asp-validation-for="StaffId" class="text-danger"></span>
        </div>

        <div class="row">
            <div class="col-md-6 mb-3">
                <label asp-for="Start" class="form-label"></label>
                <input asp-for="Start"
                       class="form-control"
                       type="datetime-local"
                       step="60" />
                <span asp-validation-for="Start" class="text-danger"></span>
            </div>
            <div class="col-md-6 mb-3">
                <label asp-for="End" class="form-label"></label>
                <input asp-for="End"
                       class="form-control"
                       type="datetime-local"
                       step="60" />
                <span asp-validation-for="End" class="text-danger"></span>
            </div>
        </div>

        <div class="mb-3">
            <label asp-for="Status" class="form-label"></label>
            <input asp-for="Status" class="form-control" />
            <span asp-validation-for="Status" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-between">
            <a asp-action="Index" class="btn btn-outline-secondary">
                Annuleren
            </a>
            <button type="submit" class="btn-gb">
                Opslaan
            </button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
