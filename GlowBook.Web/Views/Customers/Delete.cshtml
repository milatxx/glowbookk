@model GlowBook.Model.Entities.Customer

@{
    ViewData["Title"] = "Klant verwijderen";
}

<div class="gb-card mt-3">
    <div class="gb-card-title text-danger">Klant verwijderen</div>

    <div class="alert alert-warning">
        Ben je zeker dat je deze klant definitief wil verwijderen?
    </div>

    <dl class="row">
        <dt class="col-sm-2">Naam</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Telefoon</dt>
        <dd class="col-sm-10">@Model.Phone</dd>

        <dt class="col-sm-2">E-mail</dt>
        <dd class="col-sm-10">@Model.Email</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <a asp-action="Index" class="btn btn-outline-secondary">
            Annuleren
        </a>
        <button type="submit" class="btn btn-danger ms-2">
            Verwijderen
        </button>
    </form>
</div>
