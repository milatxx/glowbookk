@model GlowBook.Model.Entities.Staff

@{
    ViewData["Title"] = "Nieuwe medewerker";
}

<div class="gb-card mt-3">
    <div class="d-flex justify-content-between align-items-center mb-2">
        <div class="gb-card-title">Nieuwe medewerker</div>
    </div>

    <p class="text-muted mb-3">
        Voeg een nieuwe medewerker toe.
    </p>

    <form method="post">
        @Html.AntiForgeryToken()

        <div class="mb-3">
            <label class="form-label">Naam</label>
            <input class="form-control" asp-for="Name" />
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Email</label>
            <input class="form-control" asp-for="Email" />
            <span class="text-danger" asp-validation-for="Email"></span>
        </div>

        <div class="d-flex gap-2">
            <button class="btn-gb" type="submit">Opslaan</button>
            <a class="btn btn-outline-secondary" asp-action="Index">Annuleren</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
