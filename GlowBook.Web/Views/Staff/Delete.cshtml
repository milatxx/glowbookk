@model GlowBook.Model.Entities.Staff

@{
    ViewData["Title"] = "Medewerker verwijderen";
}

<div class="gb-card mt-3">
    <div class="d-flex justify-content-between align-items-center mb-2">
        <div class="gb-card-title text-danger">Medewerker verwijderen</div>
    </div>

    <div class="alert alert-warning">
        Zeker dat je <strong>@Model.Name</strong> wil verwijderen?
    </div>

    <dl class="row">
        <dt class="col-sm-2">Naam</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>
    </dl>

    <form asp-action="Delete" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />

        <div class="d-flex gap-2">
            <button class="btn btn-danger" type="submit">Verwijderen</button>
            <a class="btn btn-outline-secondary" asp-action="Index">Annuleren</a>
        </div>
    </form>
</div>
