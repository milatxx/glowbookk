@model GlowBook.Web.Models.Admin.EditUserRolesViewModel

@{
    ViewData["Title"] = "Rollen aanpassen";
}

<div class="gb-card mt-3">
    <div class="d-flex justify-content-between align-items-center mb-2">
        <div class="gb-card-title">Rollen aanpassen</div>
    </div>

    <p class="text-muted mb-3">
        <strong>@Model.DisplayName</strong> (@Model.Email)
    </p>

    <form method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="UserId" />

        <div class="mb-3">
            @for (int i = 0; i < Model.Roles.Count; i++)
            {
                <div class="form-check mb-2">
                    <input class="form-check-input" asp-for="Roles[i].IsSelected" />
                    <input type="hidden" asp-for="Roles[i].RoleName" />
                    <label class="form-check-label">@Model.Roles[i].RoleName</label>
                </div>
            }
        </div>

        <button class="btn-gb" type="submit">Opslaan</button>
        <a class="btn btn-outline-secondary ms-2" asp-action="Users">Annuleren</a>
    </form>
</div>
