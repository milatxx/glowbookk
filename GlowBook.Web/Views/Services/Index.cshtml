@model List<GlowBook.Model.Entities.Service>

@{
    ViewData["Title"] = "Diensten";
    var q = ViewBag.Q as string;
    var sort = ViewBag.Sort as string ?? "name";
}

<div class="gb-card mt-3">
    <div class="d-flex justify-content-between align-items-center mb-2">
        <div class="gb-card-title">Diensten / behandelingen</div>
        @if (User.IsInRole("Admin"))
        {
            <a asp-action="Create" class="btn-gb">Nieuwe dienst</a>
        }
    </div>

    <p class="text-muted mb-2">
        Overzicht van alle behandelingen met duur, prijs en categorie.
    </p>

    <form method="get" class="row g-2 mb-3">
        <div class="col-md-6">
            <input class="form-control" name="q" value="@q" placeholder="Zoek service..." />
        </div>

        <div class="col-md-3">
            <select class="form-select" name="sort">
                <option value="name" selected="@(sort == "name")">Naam A-Z</option>
                <option value="name_desc" selected="@(sort == "name_desc")">Naam Z-A</option>
            </select>
        </div>

        <div class="col-md-3 text-end">
            <button class="btn-gb" type="submit">Filter</button>
            <a class="btn btn-outline-secondary ms-2" asp-action="Index">Reset</a>
        </div>
    </form>

    <div class="gb-table-wrapper">
        <table class="table table-hover align-middle mb-0 gb-table">
            <thead>
                <tr>
                    <th>Categorie</th>
                    <th>Naam</th>
                    <th>Duur (min)</th>
                    <th>Prijs (€)</th>
                    <th style="width: 220px;">Acties</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var s in Model)
                {
                    <tr>
                        <td>@s.Category</td>
                        <td>@s.Name</td>
                        <td>@s.DurationMinutes</td>
                        <td>@s.Price.ToString("0.00")</td>
                        <td>
                            <a asp-action="Details" asp-route-id="@s.Id" class="btn btn-sm btn-outline-secondary me-1">
                                Details
                            </a>
                            @if (User.IsInRole("Admin"))
                            {
                                <a asp-action="Edit" asp-route-id="@s.Id" class="btn btn-sm btn-outline-primary me-1">
                                    Bewerken
                                </a>
                                <a asp-action="Delete" asp-route-id="@s.Id" class="btn btn-sm btn-outline-danger">
                                    Verwijderen
                                </a>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
